{
  "name": "pack-electron-react-sqlite",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "electron-is-dev": "^1.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start-react": "react-scripts start",
    "build-react": "react-scripts build",
    "start-electron": "nodemon --watch ./public/* --exec \"electron .\"",
    "dev": "concurrently \"yarn start-react-react\" \"wait-on http://localhost:3000 && yarn start-electron\" ",
    "postinstall": "electron builder install-app-deps",
    "pack-app": "yarn build-react && electron-builder --dir",
    "pack-build": "electron-builder --dir",
    "build":"yarn build-react && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "main": "public/electron.js",
  "build":{
    "appId": "com.mayoral.packReactElectronSqlite",
    "productName": "Pack React Electron Sqlite",
    "files":[
      "build/**/*"
    ],
    "directories":{
      "buildResources": "build"
    },
    "win":{
      "icon": "./build/images/appicon.ico",
      "taget": ["7z"]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1",
    "nodemon": "^2.0.7",
    "wait-on": "^5.2.1"
  }
}
